{
  "name": "meta-checker",
  "version": "1.0.0",
  "private": true,
  "description": "Localhost-controlled, sharded site crawler with telemetry Control Panel",
  "main": "scripts/shard-run.js",
  "bin": {
    "meta-check": "scripts/shard-run.js"
  },
  "scripts": {
    "start": "node scripts/shard-run.js",
    "dev": "node scripts/shard-run.js --open true",
    "dev:headless": "node scripts/shard-run.js --open false",
    "dev:app": "cross-env OPEN_TELEMETRY=false node scripts/shard-run.js --open false --spawn-electron",
    "electron": "electron electron/main.js",
    "postinstall": "playwright install chromium",
    "build:exe": "cross-env PLAYWRIGHT_BROWSERS_PATH=0 pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output dist/MetaChecker",
    "build:exe:win": "cross-env PLAYWRIGHT_BROWSERS_PATH=0 pkg . --targets node18-win-x64 --output dist/MetaChecker.exe",
    "auto": "node scripts/shard-run.js --",
    "auto:fast": "node scripts/shard-run.js -- --metaStrategy http --linksMode none",
    "auto:full": "node scripts/shard-run.js -- --dropCache true --rebuildLinks true"
  },
  "dependencies": {
    "minimist": "^1.2.8",
    "playwright": "^1.46.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": [
      "scripts/**/*.js",
      "src/**/*.js"
    ],
    "assets": [
      "README.md",
      "electron/**/*.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  }
}
